{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "ES2018",
        "module": "commonjs",
        "sourceMap": false,
        "types": ["node"],
        "typeRoots": ["node_modules/@types"],
        "moduleResolution": "node",
        "lib": ["es2020"],
        "resolveJsonModule": true,
        "outDir": "dist",
        "allowSyntheticDefaultImports": true
    },
    "include": ["src/", "src/lib/", "src/migrations/"]
}
